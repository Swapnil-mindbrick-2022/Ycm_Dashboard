				</header>
                <section >
				
						<span>DISTRICTS</span>
						<select name="District" id="districtDropdown">
						  <option value="">Select a district</option>
						</select>
					  </section>
					  <section>
						<span>CONSTITUENCY</span>
						<select name="R_Constituency" id="constituencyDropdown">
						  <option value="">Select a constituency</option>
						</select>
					  </section>
					  <section>
						<span>SURVEYDATE</span>
						<select name="Week" id="weekDropdown">
						  <option value="">Select a survey date</option>
						</select>

                   
