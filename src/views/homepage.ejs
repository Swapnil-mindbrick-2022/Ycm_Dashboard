    <style>
        html {
            zoom: 90%;
        }

        section a {
            text-decoration: none;
        }

        /* style for body */
        body {
            margin: 0;
            padding: 0;
            height: 815px;
            width: 1250px;
            background-image: url('./cm.png');
            background-size: 1840px 830px;
            background-position: center;
            background-repeat: no-repeat;
            /* height: 720px;
            width: 1280px; */
        }

        /* Styles for the container */
        .container {
            height: 520px;
            padding: 20px;
            margin-left: 220px;
            margin-bottom: 100px;
            width: 3500px;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            /* flex-direction: row; */
            /* background-color: red; */
            /* border: 1px solid #f0eaea; */
        }

        /* Styles for the sections */
        .section {
            display: flex;
            flex-basis: calc(50% - 10px);
            justify-content: center;
            align-items: center;
            /* width:150px; */
            height: 100px;
            box-sizing: border-box;
            text-align: center;

            /* box-shadow: 2px 2px 10px 2px rgba(0, 0, 0, 0.2); */
            /* background-color: #fff; */
            transition: all 0.3s ease;
        }

        /* Styles for the sections when hovered */
        button:hover {
            transform: scale(1.05);
            /* box-shadow: 2px 2px 20px 2px rgba(0, 0, 0, 0.3); */
        }

        /* Styles for the section headings */
        .button h2 {
            font-size: 40px;
            margin: 0;
            color: #333;
            text-shadow: 1px 1px #ccc;
        }

        /* Styles for the section buttons */
        button {
            width: 340px;
            border: 2px solid transparent;
            /* color: white; */
            border-radius: 2%;
            background-color: transparent;
            cursor: pointer;
            background-color: rgba(255, 255, 255, 0.2);
            box-shadow: 4px 4px 20px 4px transparent;
        }

        /* Styles for the section buttons when hovered */
        /* button:hover {
            transform: scale(1.2);
        } */
        #header {
            margin-top: -15px;
        }

        #header h1 {
            text-align: center;
            /* margin-top: -12px; */
            margin-bottom: 90px;
            margin-left: 300px;
            font-family: 'Courier New', Courier, monospace;
            font-size: xx-large;
            /* padding: 20px; */
            background-color: white;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
            border-radius: 25px;
        }

        /* Styles for the sections when hovered and after hovering */
        /* button:hover {
            transform: scale(1.05);
            box-shadow: 4px 4px 20px 4px transparent;
        } */

        /* button:hover h2 {
            text-shadow: 1px 1px #11a32c;
            color: blue;
        } */

        button:hover:after {
            content: "";
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            z-index: -1;
        }

        /* Styles for the sections on smaller screens */
        /* @media (max-width: 768px) {
