<body>
    <div id="header">
        <h1>Interactive Political Dashboard</h1>
    </div>
    <div class="container">
        <div class="section">
            <button style="margin-right: 220px;" title="overview">
                <a style="text-decoration: none; " href="/overview">
                    <img src="./overview.png" alt="" width="150px" height="150px">
                </a><br>
                <h2
                    style="color: white;font-weight:800; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                    overview</h2>
            </button>
        </div>
        <div class="section">
            <button style="margin-left: 220px;">
                <a style="text-decoration: none;" href="/constituency">
                    <img src="./constituencyview.png" alt="" width="150px" height="150px">
                </a><br>
                <h2
                    style="color: white;font-weight:800; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                    Constituency view</h2>
            </button>
        </div>
        <div class="section">
            <button style="margin-right: 220px; margin-top: 100px;">
                <a style="text-decoration: none;" href="/community">
                    <img src="./communityview.png" alt="" width="150px" height="150px"></a><br>
                <h2
                    style="color: white; font-weight:800; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                    Community view</h2>
            </button>
        </div>
        <div class="section">
            <button style="margin-left: 220px; margin-top: 100px;">
                <a style="text-decoration: none;" href="/trendysrcp">
                    <img src="./trendview.png" alt="" width="150px" height="150px">
                </a><br>
                <h2
                    style="color: white;font-weight:800; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
                    Trend view</h2>
            </button>
        </div>
    </div>
